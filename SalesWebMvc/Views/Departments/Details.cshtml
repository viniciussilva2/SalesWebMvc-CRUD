@model SalesWebMvc.Models.Department

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Departamento</h1>

<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" style="background-color: cadetblue; color: white; border: none; padding: 10px 10px; cursor: pointer;" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" style="background-color: red; color: white; border: none; padding: 10px 10px; cursor: pointer;" class="btn btn-primary">Voltar</a>
</div>
