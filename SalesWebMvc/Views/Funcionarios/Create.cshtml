@model SalesWebMvc.Models.Funcionarios

@{
    ViewData["Title"] = "Criar Funcionário";
}

<h1>Criar Funcionário</h1>

<form asp-action="Create" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Name" class="control-label col-sm-2">Nome</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="form-group">
        <label asp-for="Salary" class="control-label col-sm-2">Salário</label>
        <div class="col-sm-10">
            <input asp-for="Salary" class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <br />
        <br />
        <br />
    </div>
    <div class="form-group">
        <label asp-for="DateContract" class="control-label col-sm-2">Data de Contrato</label>
        <div class="col-sm-10">
            <input asp-for="DateContract" class="form-control" type="date" />
            <span asp-validation-for="DateContract" class="text-danger"></span>
        </div>
        <br />
        <br />
        <br />
    </div>
    <br />
    <br />
    <br />
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-success">Salvar</button>
            <a asp-action="Index" class="btn btn-danger">Cancelar</a>
        </div>
    </div>
</form>
